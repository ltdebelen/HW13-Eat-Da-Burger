<section id="burger-heading">
      <div class="container">
        <i class="fas fa-5x fa-hamburger"></i>
        <h4 class="section-heading">Eat-Da-Burger!!</h4>
      </div>
</section>

<section id="burger-body">
      <div class="container">
        <div class="row">
          <div class="one-third column value">
            <h4>Not Devoured</h4>
            {{#each burgers}}
              {{#unless devoured}}
                <input
                  class="u-full-width"
                  type="text"
                  readonly="true"
                  value="{{burger_name}}"
                />
              {{/unless}}
            {{/each}}
          </div>
          <div class="one-third column value">
            <h4><i class="fas fa-angle-double-right"></i></h4>
              {{#each burgers}}
                {{#unless devoured}}
                    <button class="button-primary btn-devour" id="{{id}}">Devour</button>
                {{/unless}}
              {{/each}}
          </div>
          <div class="one-third column value">
            <h4>Devoured</h4>
            {{#each burgers}}
              {{#if devoured}}
                <input
                  class="u-full-width"
                  type="text"
                  readonly="true"
                  value="{{burger_name}}"
                />
              {{/if}}
            {{/each}}
          </div>
        </div>
      </div>
</section>

<section id="burger-form">
      <div class="container">
        <i class="fas fa-lg fa-plus"></i>
        <h4>Add Burger</h4>
        <form>
          <label>Enter the burger you want to eat.</label>
          <textarea
            class="u-full-width"
            required="true"
          ></textarea>
          <input class="button-primary" type="submit" value="Submit" />
        </form>
</section>